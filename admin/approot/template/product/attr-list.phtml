<script>
    $('.action .del').click(function() {
        var $$ = $(this);

        $.confirm('请确认是否要删除？', function() {
            $$.ajaxAuto({
                success: function (re) {
                    if (re.status == 'ok') {
                        $$.parents('tr').remove();
                    }
                }
            });
            return false;
        }, {
            title: '信息确认'
        });
    });

    $('.js-sort').dblclick(function(event) {
        /* Act on the event */
        var $$ = $(this);
        var oldSort = $$.text();

        var input = document.createElement('input');
        input.style.borderColor = '#007DC6';
        input.type = 'text';
        input.value = oldSort;

        $$.html(input);
        $(input).focus();

        $(input).blur(function () {
            var newSort = $(this).val();
            if ((/^(\+|-)?\d+$/.test(newSort)) && newSort >= 0) {
                $$.ajaxAuto({
                    url: '<?php echo $this->url('product/attr-edit-sort')?>',
                    data: {'id': $$.data('id'), 'sort': newSort},
                    success: function (re) {
                        if (re.status != 'ok') {
                            $$.html(oldSort);
                        }
                    }
                });
            } else {
                $.warning('请输入正整数');
                $$.html(oldSort);
            }
        });

        console.log(oldSort);
    });
</script>