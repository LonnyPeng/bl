<form method="post">
	<div class="slogin">
		<div class="slogin_pat">
			<div class="slogin_logo">
				<img src="<?php echo $this->image('slogin_logo.png')?>"/>
			</div>
			<div class="slogin_ma">
				<div class="weui-cells">
				  <div class="weui-cell">
				    <div class="weui-cell__hd"><i class="iconfont">&#xe793;</i></div>
				    <div class="weui-cell__bd">
				      <input type="text" name="suser_name" value="" placeholder="账号"/>
				    </div>
				  </div>
				  <div class="weui-cell">
				    <div class="weui-cell__hd"><i class="iconfont">&#xe618;</i></div>
				    <div class="weui-cell__bd">
				      <input type="password" name="suser_password" value="" placeholder="密码"/>
				    </div>
				  </div>
				</div>
			</div>
			<div style="width: 70%; margin: 0 auto; background: rgba(255,255,255,.7); color: #666; padding-left: 10px;">
				<input type="checkbox" name="r_password" value="1">&nbsp;<span id="r_password">保存密码</span>
			</div>
			<input type="hidden" name="redirect" value="<?php echo $this->param('redirect')?>" />
			<a class="twtj_btn" id="js-submit" href="javascript:;">立即登录</a>
		</div>
	</div>
</form>

<script type="text/javascript">
	$(function(){
		var windowH=$(window).height();
		$(".slogin").height(windowH);
	});

	$('#js-submit').click(function() {
		$('form').trigger('submit');
	});

	$('form').submit(function() {
		var $$ = $(this);

		$.check(!this.suser_name.value, '请输入用户名') &&
		$.check(!this.suser_password.value, '请输入密码') &&
		$$.ajaxAuto();
		return false;
	});

	$('#r_password').click(function() {
		if ($('input[name="r_password"]').is(':checked')) {
			$('input[name="r_password"]').prop('checked', false);
		} else {
			$('input[name="r_password"]').prop('checked', true);
		}
	});
</script>